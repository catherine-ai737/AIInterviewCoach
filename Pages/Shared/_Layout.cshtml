<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIInterviewCoach</title>

    <!-- ✅ Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <!-- Optional: Custom site styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AIInterviewCoach.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 text-gray-800">
    <header class="bg-white border-b shadow-sm mb-6">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <a class="text-xl font-semibold text-blue-700" asp-area="" asp-page="/Index">AIInterviewCoach</a>
            <nav class="space-x-6">
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Index">Home</a>
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Privacy">Privacy</a>
            </nav>
        </div>
    </header>

    <main class="container mx-auto px-4">
        @RenderBody()
    </main>

    <footer class="border-t mt-12 py-4 text-center text-sm text-gray-600">
        <div class="container mx-auto px-4">
            &copy; 2025 - AIInterviewCoach - <a class="underline text-blue-600 hover:text-blue-800" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts Section -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
