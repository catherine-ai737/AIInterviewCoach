@page
@model AIInterviewCoach.Pages.AskModel
@{
    ViewData["Title"] = "Ask";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="QuestionText"></label>
        <p>@Model.QuestionText</p>
    </div>

    <div class="form-group">
        <label asp-for="UserAnswer.AnswerText">Your Answer</label>
        <textarea asp-for="UserAnswer.AnswerText" class="form-control"></textarea>
        <span asp-validation-for="UserAnswer.AnswerText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
